<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <jp.kuluna.manytime.TimeRangeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <jp.kuluna.manytime.TimeRangeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textAccentColor="@color/colorAccent"
            app:editable="true" />

        <jp.kuluna.manytime.TimeRangeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:masking="true" />

        <jp.kuluna.manytime.TimeRangeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textColor="?attr/colorPrimary" />

        <jp.kuluna.manytime.TimeRangeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textStartTime="すたーと" />

        <jp.kuluna.manytime.TimeRangeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textEndTime="えんど" />

        <jp.kuluna.manytime.TimeRangeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textOverDayEndTime="えんど(つぎのひ)" />

        <jp.kuluna.manytime.NumberPadView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:positiveKeyEnabled="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_show_dialog"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Dialog"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</ScrollView>
